# Gunakan image Node dengan Debian (supaya bisa apt-get)
FROM node:20-bullseye

# Install ffmpeg
RUN apt-get update && apt-get install -y ffmpeg && rm -rf /var/lib/apt/lists/*

# Install n8n
RUN npm install -g n8n

# Set folder kerja
WORKDIR /data

# Expose port default n8n
EXPOSE 5678

# Jalankan n8n
CMD ["n8n", "start"]
